# Start message
startup_message off
 
# Set hardstatus always on
caption always "%{= wk} %{= KY} [%n]%t @ %H %{-} %= %{= KR} %l %{-} | %{= KG} %Y-%m-%d %{-} " 
hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %=| %0c:%s "
 
# Set default encoding using utf8
defutf8 on
 
# Refresh the display when exiting programs
altscreen on
 
# Dynamic title
shelltitle '$ |bash'
 
# Disable vbell
vbell off
